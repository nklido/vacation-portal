{
  "name": "nklido/vacation-portal",
  "description": "A backend API for managing employee vacation requests",
  "type": "project",
  "require": {
    "php": "^8.3",
    "vlucas/phpdotenv": "^5.5",
    "firebase/php-jwt": "^6.10",
    "bramus/router": "^1.6",
    "ext-pdo": "*",
    "webmozart/assert": "^1.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "symfony/var-dumper": "^7.3",
    "friendsofphp/php-cs-fixer": "^3.85"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "coverage": "phpunit --coverage-clover build/logs/clover.xml",
    "coverage:html": "phpunit --coverage-html build/coverage-html",
    "lint": "php-cs-fixer fix src",
    "lint:check": "php-cs-fixer fix src --dry-run --diff"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
